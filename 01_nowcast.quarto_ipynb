        "    for k, v in vocab_sizes.items()\n",
        "}\n",
        "# </categorical variables>\n",
        "\n",
        "# next, join up the continuous and categorical historical variables\n",
        "#encoded_inputs = encoded_cont_inputs | encoded_cat_inputs\n",
